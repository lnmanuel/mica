<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <TextView
        android:id="@+id/tv_message_send"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="5dp"
        android:layout_alignParentEnd="true"
        android:background="@drawable/message_box_send"
        android:backgroundTint="@color/blue_martina"
        android:padding="10dp"
        android:text="@string/user_sent"
        android:textColor="@color/white"
        android:textSize="15sp"
        android:fontFamily="@font/poppins"/>

    <TextView
        android:id="@+id/tv_message_receive"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="5dp"
        android:layout_alignParentStart="true"
        android:background="@drawable/message_box_receive"
        android:backgroundTint="@color/gray"
        android:padding="10dp"
        android:text="@string/user_receive"
        android:textColor="@color/white"
        android:textSize="15sp"
        android:fontFamily="@font/poppins"
        android:visibility="visible"/>
</RelativeLayout>